@model CrudNet8MVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle Contacto";
}
<h1 class="text-center">Contacto con .NET 8 (.NET Core MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>Detalle Usuario</strong>
                </h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(u => u.Nombre)</li>
                    <li class="list-group-item"><strong>Telefono: </strong>@Html.DisplayFor(u => u.Telefono)</li>
                    <li class="list-group-item"><strong>Celular: </strong>@Html.DisplayFor(u => u.Celular)</li>
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(u => u.Email)</li>
                    <li class="list-group-item"><strong>Fecha: </strong>@Html.DisplayFor(u => u.FechaCreacion)</li>
                </ul>

                <a asp-action="Index" class="btn">Regresar</a>
            </div>
        </div>
    </div>
</div>
